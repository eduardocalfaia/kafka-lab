variable "storage_size" {
  description = "Size of storage for each broker"
  type        = string
  default     = "4Gi"
}

##########################################################################################
################################### volumeClaimTemplates #################################
##########################################################################################
variable "replicas" {
  description = "Count of brokers"
  type        = number
  default     = 3
}