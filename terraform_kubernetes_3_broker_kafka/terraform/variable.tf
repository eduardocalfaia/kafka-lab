##########################################################################################
######################################## NAMESPACE #######################################
##########################################################################################
variable "namespace" {
    description = "The namespace to deploy the application"
    type        = string
    default     = "kafka"
}

##########################################################################################
################################### volumeClaimTemplates #################################
##########################################################################################
variable "storage_size" {
  description = "Size of storage for each broker"
  type        = string
  default     = "1Gi"
}

##########################################################################################
###################################### EXTERNAL PORTS ####################################
##########################################################################################
variable "broker_ports" {
  description = "External ports for each broker"
  type        = map(number)
  default     = {
    broker0 = 19092
    broker1 = 29092
    broker2 = 39092
  }
}










